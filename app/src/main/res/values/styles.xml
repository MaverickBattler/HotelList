<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ListItemText">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/textColorMain</item>
    </style>

    <style name="ListItemTitleText" parent="ListItemText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/listItemMainTextSize</item>
    </style>

    <style name="ListItemSecondaryText" parent="ListItemText">
        <item name="android:textSize">@dimen/listItemSecondaryTextSize</item>
    </style>
</resources>